{
  "name": "bot-html-office-addin",
  "version": "1.0.0",
  "description": "Office Web Add-in для Word с панелью Bot HTML",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean",
    "deploy": "pnpm build && pnpm --filter addin deploy",
    "clasp:login": "clasp login",
    "pull": "clasp pull",
    "push": "clasp push",
    "open": "clasp open",
    "deploy:gas": "clasp deploy",
    "versions": "clasp versions"
  },
  "devDependencies": {
    "@google/clasp": "^3.0.6-alpha",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
